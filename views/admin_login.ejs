<% layout('layouts/boilerplate')%>

    <head>
    </head>

    <body>
        <form action="/user/login" method="POST">
            <div class="container d-flex justify-content-center align-items-center mt-5">
                <div class="row">
                    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                        <div class="card shadow">
                            <img src="../Social_media.png" alt="" class="card-img-top" />
                            <div class="card-body">
                                <h5 class="card-title">Login</h5>
                                <a href="/user/register" stlye="display: inline; float: right;">Signup</a>
                                <form action="/login" method="POST" class="validated-form" novalidate>
                                    <div class="mb-3">
                                        <label class="form-label" for="username" style="margin-top: 10px;">Username</label>
                                        <input class="form-control" type="text" id="username" name="username" autofocus required>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                    <% if(currentUser && currentUser.admin) {%>
                                        <div class="mb-3">
                                            <label class="form-label" for="username">Admin</label>
                                            <input class="form-control" type="password" id="password" name="password" autofocus required>
                                        </div>
                                        <% } %>
                                            <button class="btn btn-success btn-block">Login</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </body>

    </html>